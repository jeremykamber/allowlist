{
  "name": "AllowList",
  "description": "Block everything by default. Only allow sites you add. Manage your allowlists with an intuitive interface.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "allow_list_extension_icon_16.png",
    "32": "allow_list_extension_icon_32.png",
    "48": "allow_list_extension_icon_48.png",
    "128": "allow_list_extension_icon_128.png"
  },
  "action": {
    "default_title": "Allowlist",
    "default_popup": "src/popup/popup.html",
    "default_icons": {
      "16": "allow_list_extension_icon_16.png",
      "32": "allow_list_extension_icon_32.png",
      "48": "allow_list_extension_icon_48.png",
      "128": "allow_list_extension_icon_128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/blocked/blocked.html",
        "src/blocked/blocked.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_ui": {
    "page": "src/popup/popup.html",
    "open_in_tab": true
  }
}